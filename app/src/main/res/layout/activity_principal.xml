<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">

    <TextView
        android:layout_width="123dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Buscar Cancion: "
        android:textSize="15dp"
        android:layout_centerInParent="true"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/idBuscaListaB"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@+id/RecyclerViewVerTodas"
        android:hint="Ingrese nombre de la cancion"
        android:textSize="15sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewVerTodas"
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginVertical="20dp" />

    <Button
        android:id="@+id/verPlaylist"
        android:layout_width="114dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:background="#123456"
        android:text="ver playlist" />

    <Button
        android:id="@+id/verTodasCanciones"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:background="#123456"
        android:text="Ver todas" />

    <Button
        android:id="@+id/OrdenarAscendente"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/idBuscaListaB"
        android:layout_alignTop="@+id/verTodasCanciones"
        android:background="#123456"
        android:text="Ascendente" />

    <Button
        android:id="@+id/OrdenarDescendente"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/verTodasCanciones"
        android:background="#123456"
        android:text="Descendente" />

</RelativeLayout>