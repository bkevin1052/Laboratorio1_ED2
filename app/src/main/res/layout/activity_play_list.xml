<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayListActivity"
    android:background="@drawable/background">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewPlayList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="20dp" />

    <com.laboratoriorepaso.clases.IconFont
        android:id="@+id/eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"
        android:padding="4dp"
        android:text="@string/id_basura"
        android:textSize="60dp"
        android:textColor="#F8F8FF"/>

    <Button
        android:id="@+id/DescendentePorDuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"

        android:background="#123456"
        android:text="Descendente por Duracion"
        android:textColor="#F8F8FF"
        android:textSize="8dp" />

    <Button
        android:id="@+id/AscendentePorDuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="#123456"
        android:text="Ascendente por Duracion"
        android:textColor="#F8F8FF"
        android:textSize="8dp" />

    <Button
        android:id="@+id/DescendentePorNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/DescendentePorDuracion"
        android:layout_centerHorizontal="true"
        android:background="#123456"
        android:text="Descendente por Nombre"
        android:textColor="#F8F8FF"
        android:textSize="8dp" />

    <Button
        android:id="@+id/AscendentePorNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/AscendentePorDuracion"
        android:layout_centerHorizontal="true"
        android:background="#123456"
        android:text="Ascendente por Nombre"
        android:textColor="#F8F8FF"
        android:textSize="8dp" />

</RelativeLayout>